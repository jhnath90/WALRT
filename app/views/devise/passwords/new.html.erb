<div class="text-center">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control col-centered", style: "width: 35%", autofocus: true %>
    </div><br />

    <div class="actions">
      <%= f.submit "Reset my password", class: "btn btn-primary" %>
    </div><br />
  <% end %>

  <%= render "devise/shared/links" %>
</div>
